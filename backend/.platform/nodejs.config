# Node.js platform configuration for Elastic Beanstalk
# Simplified configuration for Node.js 22 platform

# Configure Node.js application startup
files:
  "/opt/elasticbeanstalk/tasks/bundlelogs.d/01-app-logs.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/log/nodejs/nodejs.log

# Environment configuration
container_commands:
  01_setup_logs:
    command: "mkdir -p /var/log/nodejs"
  02_set_permissions:
    command: "chmod 755 /var/log/nodejs"