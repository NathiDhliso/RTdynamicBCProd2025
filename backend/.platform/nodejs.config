option_settings:
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 18.17.0
    GzipCompression: true
    ProxyServer: nginx
  aws:elasticbeanstalk:container:nodejs:environment:
    NODE_ENV: production
  aws:elasticbeanstalk:environment:proxy:nginx:
    # Keep proxy timeouts reasonable; healthcheck is at /health
    ProxyReadTimeout: 30
    ProxyConnectTimeout: 10
    ClientMaxBodySize: 10m
    ClientBodyTimeout: 30
    ClientHeaderTimeout: 30