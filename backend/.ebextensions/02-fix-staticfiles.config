# Fix for static files configuration validation error
# Removes any problematic static files settings that may be cached

option_settings:
  # Ensure no static files configuration is present
  # Node.js applications should handle static files through Express, not EB
  aws:elasticbeanstalk:container:nodejs:
    NodeCommand: "npm start"
    NodeVersion: 20.x
    GzipCompression: true
    ProxyServer: nginx
    # Explicitly ensure no static files configuration

commands:
  01_clear_staticfiles_cache:
    command: "echo 'Clearing any cached static files configuration'"
    ignoreErrors: true