# Disable HTTPS listener to fix SSL certificate errors
# This configuration removes the HTTPS listener that was causing deployment failures
# To enable HTTPS later, you'll need to:
# 1. Obtain an SSL certificate (AWS Certificate Manager or upload your own)
# 2. Configure the listener with the certificate ARN

option_settings:
  # Remove any HTTPS listener configuration
  aws:elb:listener:443:
    ListenerEnabled: false
  
  # Ensure HTTP listener is properly configured
  aws:elb:listener:80:
    ListenerEnabled: true
    Protocol: HTTP
    InstancePort: 80
    InstanceProtocol: HTTP
  
  # Load balancer configuration
  aws:elb:loadbalancer:
    LoadBalancerHTTPPort: 80
    LoadBalancerPortProtocol: HTTP
    LoadBalancerHTTPSPort: 'OFF'
  
  # Health check configuration
  aws:elb:healthcheck:
    HealthyThreshold: 3
    Interval: 30
    Target: HTTP:80/health
    Timeout: 5
    UnhealthyThreshold: 5